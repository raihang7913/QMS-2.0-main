@model IEnumerable<QMS.Models.DOCREQUSER>

@{
    ViewData["Title"] = "Listusername";
}

<h1>List Username</h1>

<p>
    <a asp-action="Edituser">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requestaccess)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Finalapprovalaccess)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ITCapprovalaccess)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AS9100approvalaccess)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NADCAPapprovalaccess)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doccontrollaccess)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adminaccess)
            </th>
            <th> Action </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requestaccess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Finalapprovalaccess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ITCapprovalaccess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AS9100approvalaccess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NADCAPapprovalaccess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doccontrollaccess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adminaccess)
            </td>
            <td>
                <a asp-action="Edituser" asp-route-id="@item.Userid"><i title ="edit" class="fa-sharp fa-solid fa-pen"></i></a> |
                <a asp-action="Deleteuser" asp-route-id="@item.Userid">
                    <i title ="delete" class="fa-sharp fa-solid fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('.table').DataTable(
            {
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            }
        );
    });
</script>